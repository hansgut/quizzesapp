<!DOCTYPE html>
<html>
  <head>
    <title>Технология разработки программного обеспечения <%= content_for?(:title) ? yield(:title) : '' %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag 'application', media: 'all'%>
    <%= javascript_include_tag 'application'%>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  </head>

  <body>
    <div id="container">
      <% if user_signed_in? %>
        <div id="menu">

          <ul id="slide-out" class="side-nav fixed">
            <%= link_to root_path do %>
            <li>
              <img src="https://adukar.by/images/photo/logo-mgke.png" alt="" width="300px" >
            </li>
            <% end %>

            <li>
              <%= link_to 'Глоссарий', determinations_path %>
            </li>
            <li>
              <%= link_to 'Теоретический раздел', theories_path %>
            </li>
            <li>
              <%= link_to 'Лабораторно-практический раздел', practices_path %>
            </li>
            <li>
              <%= link_to 'Контроль знаний', quizzes_path %>
            </li>
            <li>
              <%= link_to 'Создание диаграмм', diagrams_path %>
            </li>
            <li>
              <%= link_to 'Вспомогательный раздел', helpersections_index_path %>
            </li>
            <% if user_signed_in? %>
              <li>
                <%= link_to('Выйти', destroy_user_session_path, method: :delete) %>
              </li>
            <% else %>
              <li>
                <%= link_to('Логин', new_user_session_path)  %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div id="content">
        <% if user_signed_in? %>
        <div class="row">
          <div class="col s12">
            <a href="#" data-activates="slide-out" class="button-collapse hide-on-large-only">
              <i class="material-icons teal-text">menu</i>
            </a>
          </div>
        </div>
        <% end %>

        <%= yield %>
      </div>

    </div>

  </body>
</html>
