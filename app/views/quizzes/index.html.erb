<% title '- Проверка знаний' %>
<div class="row">
  <div class="col s12 m6 push-m3 l5 push-l3">
    <ul class="collection with-header">
        <li class="collection-header"><h4>Тесты</h4></li>
        <% @quizzes.each do |q| %>
          <li class="collection-item">
            <div>
              <%= link_to q.title, {controller: 'attempts', action: 'new', quiz: q.id} %>
              <% if current_user.try(:admin?) %>
                <%= link_to quiz_path(q), class: 'secondary-content', method: :delete, data: { confirm: 'Вы уверены?' } do %>
                  <i class="material-icons">delete_forever</i>
                <% end %>
                <%= link_to edit_quiz_path(q), class:'secondary-content' do %>
                  <i class="material-icons">edit</i>
                <% end %>
                <%= link_to quiz_path(q), class: 'secondary-content' do %>
                  <i class="material-icons">search</i>
                <% end %>
              <% end %>
            </div>
          </li>
        <% end %>
      </ul>
  </div>
</div>
<% if current_user.try(:admin?) %>
  <div class="fixed-action-btn">
    <%= link_to new_quiz_path, class:'btn-floating btn-large shadow-t' do %>
      <i class="large material-icons">add</i>
    <% end %>
  </div>
<% end %>
